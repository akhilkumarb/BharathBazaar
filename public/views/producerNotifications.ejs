<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">

        <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>User Dashboard Panel</title>
    <link rel="stylesheet" href="/css/userdashboard.css">
    <style>
        .overview-boxes .box{
            width:750px;
            height: auto;
            padding: 30px;
        }
        .overview-boxes .number{
          font-size: 17px;
        }
        .home-content .box .number{
          font-size: 22px;
        }
    </style>

</head>
<body>
    <div class="sidebar">
        <div class="logo-details">
          <span class="logo_name"><span style="color:rgb(217, 153, 84);">B</span><span style="color:rgb(80, 207, 80)">B</span></span>
        </div>
        <ul class="nav-links">
          <li>
              <a href="/user/dashboard?userid=<%= encodeURIComponent(user._id) %>">
                  <i class='bx bx-grid-alt'></i>
                  <span class="links_name">Dashboard</span>
              </a>
          </li>

          <li>
              <a href="/user/orders?userid=<%= encodeURIComponent(user._id) %>">
                  <i class="fa-solid fa-truck-fast"></i>
                  <span class="links_name">My Orders</span>
              </a>
          </li>

          <li>
              <a href="/user/addproduct?userid=<%= encodeURIComponent(user._id) %>" > 
                <i class="fa-solid fa-industry"></i>
                  <span class="links_name">Produce Item</span>
              </a>
          </li>

          <li>
            <a href="/user/producer?userid=<%= encodeURIComponent(user._id) %>" > 
              <i class="fa-solid fa-signal"></i>
                <span class="links_name">Product Stats</span>
            </a>
        </li>

        <li>
          <a href="/user/appointments?userid=<%= encodeURIComponent(user._id) %>"  >
              <i class='bx bx-grid-alt'></i>
              <span class="links_name">appointments</span>
          </a>
      </li>

          <li>
            <a href="/producer/notifications?userid=<%= encodeURIComponent(user._id) %>" class="active"> 
                <i class="fa-solid fa-bell"></i>
                <span class="links_name">Notifications</span>
            </a>
        </li>

          <li>
              <a href="/user/settings?userid=<%= encodeURIComponent(user._id) %>">
                  <i class="fa-solid fa-gear"></i>
                  <span class="links_name">Settings</span>
              </a>
          </li>
              
          <li class="log_out">
              <a href="/login">
                  <i class='bx bx-log-out'></i>
                  <span class="links_name">logout</span>
              </a>
          </li>
      </ul>
        </div>
        <section class="home-section">
            <nav>
              <div class="sidebar-button">
                <i class='bx bx-menu sidebarBtn'></i>
                <span class="dashboard">Notifications</span>
              </div>
        
              <div class="profile-details">
                
                <span class="admin_name"><%= user.name %></span>
              </div>
            </nav>
        
            <div class="home-content">
              <div class="overview-boxes" >
                <% for (const notification of notifications) { %>
                    <div class="box">
                        <div class="right-side" >
                          <div class="number">
                              Congratulations  &#129395; &#x1f389;  &#129395; &#x1f389; Your products are going great 
                              <br>
                              Your product got <%= notification.count %> <%= notification.achieved %> on 
                              
                              <%= notification.productname %>
                              <img src="<%= notification.productImg %>" alt="" height="50px" width="50px" style="padding-top:10px;">
                          </div>
                        </div>
                      </div>
      
                     
                    <% } %>
                

              </div>

            </div>
          </section>
    <div>




</div>
</body>
</html>