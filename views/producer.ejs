<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">

        <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>User Dashboard Panel</title>
    <link rel="stylesheet" href="./css/producer.css">
    <style>
     
    </style>
</head>
<body>
      <div class="sidebar">
        <section class="home-section">
            <nav>
              <div class="sidebar-button">
                <i class='bx bx-menu sidebarBtn'></i>
                <span class="dashboard">Producer</span>
              </div>
        
              <div class="profile-details">
                
                <span class="admin_name"><%= user.name %></span>
              </div>
            </nav>
        
            <div class="home-content">
              <div class="overview-boxes">
                <div class="box">
                    <div class="right-side">
                        <h2>Producer Details</h2>
                   
                        <div class="number"><span class="producer-name"><%= user.name %></span ><i class="fa-solid fa-circle-check" style="color:green;"></i> </div>
                      <br>
                        <div class="number"><%= user.email %></div>
                        
                      </div>
                      <i class="fa-solid fa-user fa-fade" style="color: #2d6fe1; font-size:70px  "></i>
                </div>



              </div>

            </div>


          </div>
         
            
            <div class="form wrapper">
              <form action="/schedule-appointment" method="POST">
                <input type="hidden" name="userId" value="<%= userid %>">
                <input type="hidden" name="producerId" value="<%= producerid %>">
                <input type="hidden" name="productId" value="<%= product._id %>">
                Date: <input type="date" name="appointmentDate"><br>
                Time: <input type="time" name="appointmentTime"><br>
                Additional Information: <textarea name="appointmentText"></textarea><br>
                <input type="submit" value="Schedule Appointment">
            </form>
            

           
            <div class="col1">
              <h2>Current Viewed Item</h2>
              <div class="product-card product-item">
                
                
                <div class="main-images">
                  
                  <img src= <%= product.imgUrl %> class="tab-image">
                
                </div>
                <div class="shoe-details">
                  <div class="shoe_name"><%= product.name.toLowerCase().split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ') %>
                  </div>
                  

                </div>
                <div class="color-price">
                  
                  <div class="price">
                    <span class="price price_num">$<%= product.price %></span>
                  </div>
                </div>
                <button type="submit"><a href="/admin/update?id=<%= encodeURIComponent(product._id) %>&name=<%= encodeURIComponent(product.name) %>&quantity=<%= encodeURIComponent(product.quantity) %>&price=<%= product.price %>&imgUrl=<%= encodeURIComponent(product.imgUrl) %>">Check Availability</a></button>
              </div>
          </div>

          <section class="py-5">
            <div class="container-fluid">
              
              <div class="row">
                <div class="col-md-12">
      
                  <div class="bootstrap-tabs product-tabs">
                    <h2>Items Produced</h2>
                      <div class="col">
                          <% products.forEach(product => { %>
                              
                          <div class="product-card product-item">
                            
                            
                            <div class="main-images">
                              
                              <img src= <%= product.imgUrl %> class="tab-image">
                            
                            </div>
                            <div class="shoe-details">
                              <div class="shoe_name"><%= product.name.toLowerCase().split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ') %>
                              </div>
                              
 
                            </div>
                            <div class="color-price">
                              
                              <div class="price">
                                <span class="price price_num">$<%= product.price %></span>
                              </div>
                            </div>
                            <button type="submit"><a href="/admin/update?id=<%= encodeURIComponent(product._id) %>&name=<%= encodeURIComponent(product.name) %>&quantity=<%= encodeURIComponent(product.quantity) %>&price=<%= product.price %>&imgUrl=<%= encodeURIComponent(product.imgUrl) %>">Order Item</a></button>
                          </div>
                          
                        <% }); %>
                      </div>
      
      </section>
        </div>


          </section>
   </div>
   


</div>



</body>
</html>