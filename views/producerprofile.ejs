    <style>
        * {
            list-style: none;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: sans-serif;
        }

        body {

            background: #edfcff;
        }

        header {
            z-index: 100;
            padding: 0px 15px;
            height: 13vh;
            background: #1976d3;
            color: #fff;
            font-size: 25px;
            margin-top: -5px;
        }

        header nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        img {
            height: 70px;
            width: 70px;
            border-radius: 50%;
        }

        .img-title,
        .icon-name {
            display: flex;
            align-items: center;
            margin-top: 10px;
        }

        .goi img {
            margin-top: 2px;
            height: 12vh;
            width: 120px;
            border-radius: 0;
        }

        .icon {
            height: 50px;
            width: 50px;
            background: green;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 5px;
        }


        .box {
            width: 40vw;
            margin: 50px auto;
            display: flex;
            justify-content: center;
            align-items: center;
            padding-top: 0vh;
            height: 50vh;
            background: #fff;
            border-radius: 10px;
            color: black;
            text-align: center;
        }

        .box h3 {
            font-size: 32px;
            margin-bottom: 30px;
            color: #1976d3;
        }

        label {
            display: block;
        }

        label {
            text-align: left;
            font-size: 22px;
            margin-bottom: 5px;
        }

        input {
            width: 100%;
            height: 35px;
            outline: none;
            padding: 0 15px;
            font-size: 20px;
            background: none;
            caret-color: #fff;
            border-radius: 5px;
            border: 1px solid #bfbfbf;
            border-bottom-width: 2px;
            transition: all 0.2s ease;
            margin-bottom: 15px;
        }

        #submit {
            height: 50px;

            outline: none;
            padding: 10px;
            border-radius: 10px;
            font-size: 20px;
            background: #1976d3;
            color: white;
            font-weight: bold;
            cursor: pointer;
            box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.2);
        }

        .input-box input {
            margin-top: 20px;
            width: 350px;
            height: 53px;
            color: #000;
            background: none;
            font-size: 24px;
            font-weight: 600;
            border-radius: 4px;
            border: 1px solid #aaa;
            padding: 0 2.85rem 0 1rem;
        }

        .input-box span {
            margin-left: 5px;
            cursor: pointer;
            font-size: 25px;
            font-weight: bold;
            line-height: 53px;
            color: #707070;
        }

        .input-box {
            display: flex;
            align-items: center;
        }

        h2 {
            font-size: 30px;
        }
    </style>

</head>

<body>

    <div>
