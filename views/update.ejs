<body>
    <div class="sidebar">
        <div class="logo-details">
            <span class="logo_name">GVK</span>
        </div>
        <ul class="nav-links">
            <li>
                <a href="/admin/dashboard">
                    <i class='bx bx-grid-alt'></i>
                    <span class="links_name">Dashboard</span>
                </a>
            </li>
            <li>
                <a href="/admin/customers">
                    <i class="fa-solid fa-user"></i>
                    <span class="links_name">Customers</span>
                </a>
            </li>
            <li>
                <a href="/admin/orders">
                    <i class="fa-solid fa-truck-fast"></i>
                    <span class="links_name">Orders</span>
                </a>
            </li>
            <li>
                <a href="/admin/favourites">
                    <i class="fa-solid fa-heart"></i>
                    <span class="links_name">Favourites</span>
                </a>
            </li>
            <li>
                <a href="/admin/products">
                    <i class='bx bx-box'></i>
                    <span class="links_name">Products</span>
                </a>
            </li>
            <li> 
                <a href="/admin/total-orders">
                    <i class="fa-solid fa-sack-dollar"></i>
                    <span class="links_name">Total orders</span>
                </a>
            </li>
            <li>
                <a href="/admin/addnewproduct" >
                    <i class="fa-solid fa-circle-plus"></i>
                    <span class="links_name">Add Product</span>
                </a>
            </li>
    
            <li>
                <a href="/admin/update"  class="active" >
                    <i class="fa-regular fa-circle-check"></i>
                    <span class="links_name">Update</span>
                </a>
            </li>
            <li>
                <a href="/admin/delete">
                    <i class="fa-solid fa-trash-can"></i>
                    <span class="links_name">Delete</span>
                </a>
            </li>
            
    
            <li class="log_out">
                <a href="/login">
                    <i class='bx bx-log-out'></i>
                    <span class="links_name">logout</span>
                </a>
            </li>
        </ul>
        </div>
    <div class="home-section">
        <nav>
        <div class="sidebar-button">
            <i class='bx bx-menu sidebarBtn'></i>
            <span class="dashboard">Product</span>
        </div>

        <div class="profile-details">
            <img src="/k2.jpg" alt="">
            <span class="admin_name">Ganta Venkata Kousik</span>

        </div>
        </nav>
    <section>
        
    <div class="wrapper">
        <header>Update Product</header>
        <form action="/admin/updateproduct" method="POST">
            <input type="hidden" name="id" value="<%= product.id %>">
  
          <div class="field name">
            <div class="input-area">
              <input type="text" name="name" placeholder="Product Name" value="<%= product.name %>">
              
            </div>
          </div>
  
          <div class="field password imgUrl">
            <div class="input-area">
              <input type="text" name="imgUrl" placeholder="Image URL" value="<%= product.imgUrl %>">
              
            </div>
          </div>
  
          <div class="field price">
            <div class="input-area">
              <input type="text" name="price" placeholder="Price" value="<%= product.price %>">
              
              
            </div>
          </div>
  
          <div class="field email quantity">
            <div class="input-area">
              <input type="text" name="quantity" placeholder="Quantity" value="<%= product.quantity %>">
              
            </div>
          </div>
         
          <input type="submit" value="Update" >
        </form>
  
      </div>
    </section>
    </div>


<script src="./update.js"></script>
</body>

</html>