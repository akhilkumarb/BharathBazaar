<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">

  <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
    integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <title>User Dashboard Panel</title>
  <link rel="stylesheet" href="/css/userappointments.css">
  <style>
    .container {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
    }

    .left-column {
      flex-basis: calc(50% - 10px);
      /* Adjust as needed */
      margin-right: 10px;
      /* Adjust as needed */
    }

    .right-column {
      flex-basis: calc(50% - 10px);
      /* Adjust as needed */
      margin-left: 10px;
      /* Adjust as needed */
    }

    .col1,
    .col2,
    .col3,
    .col4 {
      border: 1px solid #ccc;
      /* Add borders or styles as needed */
      padding: 10px;
      margin-bottom: 10px;
      /* Adjust as needed */
    }
  </style>
</head>

<body>
  <div class="sidebar">
    <div class="logo-details">
      <span class="logo_name"><span style="color:rgb(217, 153, 84);">B</span><span
          style="color:rgb(80, 207, 80)">B</span></span>
    </div>
    <ul class="nav-links">
      <li>
        <a href="/user/dashboard?userid=<%= encodeURIComponent(user._id) %>">
          <i class='bx bx-grid-alt'></i>
          <span class="links_name">Dashboard</span>
        </a>
      </li>

      <li>
        <a href="/user/orders?userid=<%= encodeURIComponent(user._id) %>">
          <i class="fa-solid fa-truck-fast"></i>
          <span class="links_name">My Orders</span>
        </a>
      </li>

      <li>
        <a href="/user/addproduct?userid=<%= encodeURIComponent(user._id) %>">
          <i class="fa-solid fa-industry"></i>
          <span class="links_name">Produce Item</span>
        </a>
      </li>

      <li>
        <a href="/user/producer?userid=<%= encodeURIComponent(user._id) %>">
          <i class="fa-solid fa-signal"></i>
          <span class="links_name">Product Stats</span>
        </a>
      </li>

      <li>
        <a href="/user/appointments?userid=<%= encodeURIComponent(user._id) %>" class="active">
          <i class='bx bx-grid-alt'></i>
          <span class="links_name">appointments</span>
        </a>
      </li>

      <li>
        <a href="/producer/notifications?userid=<%= encodeURIComponent(user._id) %>">
          <i class="fa-solid fa-bell"></i>
          <span class="links_name">Notifications</span>
        </a>
      </li>

      <li>
        <a href="/user/settings?userid=<%= encodeURIComponent(user._id) %>">
          <i class="fa-solid fa-gear"></i>
          <span class="links_name">Settings</span>
        </a>
      </li>

      <li class="log_out">
        <a href="/login">
          <i class='bx bx-log-out'></i>
          <span class="links_name">logout</span>
        </a>
      </li>
    </ul>
  </div>
  <section class="home-section">
    <nav>
      <div class="sidebar-button">
        <i class='bx bx-menu sidebarBtn'></i>
        <span class="dashboard">Appointments</span>
      </div>
    </nav>
  </section>

  <div class="col1">
    <h2 class="h1">Appointments Scheduled By Me</h2>
    <div class="product-card appointment-item">
      <% for (let i=0; i < formattedAppointments.length; i++) { %>
        <% if(formattedAppointments[i].completed==0) { %>

          <div class="shoe-details">
              <div class="shoe_name">
                Appointment With: <%= formattedAppointments[i].appointmentName %>
              </div>
              <div class="shoe_name">
                Date: <%= formattedAppointments[i].appointmentDate %>
              </div>
              <div class="shoe_name">
                Time: <%= formattedAppointments[i].appointmentTime %>
              </div>
              <div class="shoe_name">
                Text: <%= formattedAppointments[i].appointmentText %>
              </div>
            </div>

            <%} %>
              <% } %>
          </div>
  </div>
  <div class="col2">
    <div class="product-card appointment-item">
      <h2> Completed Appointments </h2>
      <% for (let i=0; i < formattedAppointments.length; i++) { %>
        <% if(formattedAppointments[i].completed==1) { %>

          <div class="shoe-details">
            <div class="shoe_name">
              Appointment With: <%= formattedAppointments[i].appointmentName %>
            </div>
            <div class="shoe_name">
              Date: <%= formattedAppointments[i].appointmentDate %>
            </div>
            <div class="shoe_name">
              Time: <%= formattedAppointments[i].appointmentTime %>
            </div>
            <div class="shoe_name">
              Text: <%= formattedAppointments[i].appointmentText %>
            </div>
          </div>

          <%} %>
            <% } %>
    </div>
  </div>

  <div class="col3">
    <h2 class="h1">Appointments Scheduled With Me</h2>
    <div class="product-card appointment-item">
      <% for (let i=0; i < formattedAppointments2.length; i++) { %>
        <% if(formattedAppointments2[i].completed==0) { %>

          <div class="shoe-details">
            <div class="shoe_name">
              Appointment With: <%= formattedAppointments2[i].appointmentConsumer %>
            </div>
            <div class="shoe_name">
              Date: <%= formattedAppointments2[i].appointmentDate %>
            </div>
            <div class="shoe_name">
              Time: <%= formattedAppointments2[i].appointmentTime %>
            </div>
            <div class="shoe_name">
              Text: <%= formattedAppointments2[i].appointmentText %>
            </div>
          </div>

          <%} %>
            <% } %>
    </div>
  </div>
  <div class="col4">
    <h2> Completed Appointments </h2>
    <% for (let i=0; i < formattedAppointments2.length; i++) { %>
      <% if(formattedAppointments2[i].completed==1) { %>
        
          <div class="shoe-details">
            <div class="shoe_name">
              Appointment With: <%= formattedAppointments2[i].appointmentConsumer %>
            </div>
            <div class="shoe_name">
              Date: <%= formattedAppointments2[i].appointmentDate %>
            </div>
            <div class="shoe_name">
              Time: <%= formattedAppointments2[i].appointmentTime %>
            </div>
            <div class="shoe_name">
              Text: <%= formattedAppointments2[i].appointmentText %>
            </div>
          </div>
        </div>
        <%} %>
          <% } %>
  </div>
</div>




</body>

</html>